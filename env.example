# finEdSkywalker Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================================================
# Required: JWT Secret
# =============================================================================
# Secret key for JWT token signing and validation
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Required: User Passwords
# =============================================================================
# Passwords for default users (required for authentication)
# Use strong, unique passwords for each environment
USER_SSHETTY_PASSWORD=your_secure_password_here
USER_AJAIN_PASSWORD=your_secure_password_here
USER_NSOUNDARARAJ_PASSWORD=your_secure_password_here

# =============================================================================
# Optional: API Keys
# =============================================================================
# Finnhub API Key (get free key at https://finnhub.io)
# Leave empty to use mock data mode
FINNHUB_API_KEY=your_finnhub_api_key_here

# =============================================================================
# Optional: EDGAR Configuration
# =============================================================================
# User-Agent for SEC EDGAR API requests (required by SEC)
# Format: AppName/Version (contact@email.com)
EDGAR_USER_AGENT=finEdSkywalker/1.0 (your-email@example.com)

# =============================================================================
# Optional: Mock Data Mode
# =============================================================================
# Set to "true" to use mock data instead of real API calls
# Useful for testing without API keys
USE_MOCK_DATA=false

# =============================================================================
# Optional: AWS Configuration (for testing deployed API)
# =============================================================================
# API Gateway URL from Terraform deployment
# Get with: cd terraform && terraform output api_gateway_url
SKYWALKER_API_URL=

# =============================================================================
# Optional: Test Configuration
# =============================================================================
# Override username/password for test scripts
# TEST_USERNAME=sshetty
# TEST_PASSWORD=your_test_password

